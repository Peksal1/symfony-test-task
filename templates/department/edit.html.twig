{% extends 'base.html.twig' %}

{% block title %}Edit {{ department.name }} - Employee Management System{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_department_index') }}">Departments</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_department_show', {'id': department.id}) }}">{{ department.name }}</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
</nav>

<div class="page-header">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3">
        <h1 class="page-title">
            <i class="fas fa-building-edit"></i>
            Edit Department
        </h1>
        <div class="d-flex flex-column flex-sm-row gap-2 w-100 w-lg-auto">
            <a href="{{ path('app_department_show', {'id': department.id}) }}" class="btn btn-outline-info">
                <i class="fas fa-eye"></i>
                View Profile
            </a>
            <a href="{{ path('app_department_index') }}" class="btn btn-outline-secondary w-100 w-sm-auto">
                <i class="fas fa-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="avatar-circle me-3">
                        <i class="fas fa-building"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">{{ department.name }}</h5>
                        <small class="text-muted">Department ID: #{{ department.id }}</small>
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row g-3 g-md-4">
                        <div class="col-12">
                            <div class="form-group">
                                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter department name'}}) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter department description (optional)', 'rows': 4}}) }}
                                {{ form_errors(form.description) }}
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Optional field. Describe the department's role and responsibilities.
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex flex-column flex-sm-row justify-content-end gap-2">
                        <a href="{{ path('app_department_show', {'id': department.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update Department
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-users me-2"></i>
                    Department Statistics
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-2 g-md-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-users text-primary me-2"></i>
                            <div>
                                <strong>Employees:</strong> {{ department.employees|length }} assigned
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <div>
                                <strong>Status:</strong> Active Department
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-circle {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #e2e8f0, #cbd5e1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #64748b;
    font-size: 1.25rem;
}
</style>
{% endblock %}